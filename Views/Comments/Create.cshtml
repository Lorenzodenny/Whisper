@model Whisper.Models.Comments

@{
    ViewBag.Title = "Create Comments";
}



<div class="login-container">
    <div class="login-box">
        <h2>Scrivi il tuo commento💜</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @* Campo nascosto per l'UserId, assicurati che questo valore sia impostato nel controller *@
                @Html.HiddenFor(model => model.UserId)

                @* Se il PostId viene passato alla vista, non è necessario mostrare questo campo *@
                @Html.HiddenFor(model => model.PostId)

                <div class="form-group ms-6">
                    <label class="icon fw-bold">Cosa vuoi dirmi?</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Contents, new { @class = "form-control-area", @rows = "5", @placeholder = "A cosa stai pensando?" })
                        @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-2 ms-6">
                    <div class="d-flex">
                        <input type="submit" value="Commenta" class="btn btn-sm btn-login me-2 text-white" />
                        @Html.ActionLink("Home", "Index", "Posts", null, new { @class = "btn btn-sm btn-back" })
                    </div>
                </div>
            </div>
        }

        
        </div>
</div>