@model Whisper.Models.Comments

@{
    ViewBag.Title = "Delete";
}

<div class="login-container">
    <div class="login-box">

        <p class="alert alert-danger">Sei sicuro di voler eliminare il tuo Commento? Questa azione è irreversibile.</p>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt class="color-wine">
                    @Html.DisplayNameFor(model => model.Users.Username)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Users.Username)
                </dd>

                <dt class="color-wine">
                    <label>Creato il</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PostedAt)
                </dd>

                <dt class="color-wine">
                    <label>Contenuto</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Contents)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Elimina Commento" class="btn btn-sm btn-login text-shadow" />
                    @Html.ActionLink("Annulla", "Index", "Posts", new { id = Model.UserId }, new { @class = "btn btn-sm btn-default btn-back ms-2 text-shadow" })

                </div>
            }
        </div>
        </div>
</div>