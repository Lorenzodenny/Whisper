@model Whisper.Models.Avatars

@{
    ViewBag.Title = "Delete";
}

<div class="login-container">
    <div class="login-box">
        <p class="alert alert-danger">Sei sicuro di voler eliminare questo avatar? Questa azione è irreversibile.</p>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>

                <dd>
                    <img src="@Url.Content(Model.Foto)" alt="Avatar Image" style="max-width: 200px; height: auto;" />
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Elimina Avatar" class="btn btn-sm btn-danger text-white" />
                    @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-sm btn-back ms-2 text-white" })
                </div>
            }
        </div>
    </div>
</div>
