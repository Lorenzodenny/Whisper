@model Whisper.Models.Reports

@{
    ViewBag.Title = "Delete";
}



<div class="login-container">
    <div class="login-box">

        <p class="alert alert-danger text-shadow">Sei sicuro di voler eliminare questo Report? Questa azione è irreversibile.</p>
        <div>
            <hr />
            <dl class="dl-horizontal">
                @if (Model.CommentId.HasValue)
                {
                    <dt>
                        <label class="text-shadow">Contenuto del Commento segnalato</label>
                    </dt>

                    <dd class="text-shadow">
                        @Html.DisplayFor(model => model.Comments.Contents)
                    </dd>
                }

                @if (Model.PostId.HasValue)
                {
                    <dt>
                        <label class="text-shadow">Contenuto del Post segnalato</label>
                    </dt>

                    <dd class="text-shadow">
                        @Html.DisplayFor(model => model.Posts.Contents)
                    </dd>
                }

                <dt>
                    <label class="text-shadow">Report da parte dell' utente</label>
                </dt>

                <dd class="text-shadow">
                    @Html.DisplayFor(model => model.Users.Username)
                </dd>

                <dt class="text-shadow">
                    @Html.DisplayNameFor(model => model.DescrizioneReport)
                </dt>

                <dd class="text-shadow">
                    @Html.DisplayFor(model => model.DescrizioneReport)
                </dd>

                <dt class="text-shadow">
                    @Html.DisplayNameFor(model => model.ReportDate)
                </dt>

                <dd class="text-shadow">
                    @Html.DisplayFor(model => model.ReportDate)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Elimina Report" class="btn btn-sm btn-danger text-white text-shadow" />
                    @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-sm btn-back ms-2 text-shadow" })

                </div>
            }
        </div>
        </div>
</div>