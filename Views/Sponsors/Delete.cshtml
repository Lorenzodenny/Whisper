@model Whisper.Models.Sponsors

@{
    ViewBag.Title = "Sponsor Delete";
}

<div class="login-container">
    <div class="login-box">

        <p class="alert alert-danger">Sei sicuro di voler eliminare il tuo Bisbiglio? Questa azione è irreversibile.</p>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    <label class="fw-bold color-wine">Admin</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Users.Username)
                </dd>

                <dt>
                    <label class="fw-bold color-wine">Titolo Sponsor</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Titolo)
                </dd>

                <dt>
                    <label class="fw-bold color-wine">Contenuto Sponsor</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    <label class="fw-bold color-wine">Foto</label>
                </dt>
                <dd>
                    <img src="@Url.Content(Model.Foto)" alt="Immagine" style="max-width: 100%;" />
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Elimina Sponsor" class="btn btn-sm btn-danger text-white" />
            @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-sm btn-back ms-2 text-white" })

        </div>
            }
        </div>
        </div>
</div>