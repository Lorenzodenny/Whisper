@model IEnumerable<Whisper.Models.Sponsors>

@{
    ViewBag.Title = "Index";
}


<div class="my-3 p-3 bg-white rounded shadow">
    <div class="d-flex justify-content-between align-items-start">
        <div class="d-flex flex-column ">
            <p>
                @Html.ActionLink("Inserisci nuova pubblicità", "Create", null, new { @class = "btn btn-sm btn-login text-white" })
            </p>
            <div class="text-center">
                <table class="table table-danger table-hover">
                    <tr>
                        <th>
                            <label class="fw-bold">Admin</label>
                        </th>
                        <th>
                            <label class="fw-bold">Titolo dello sponsor</label>
                        </th>
                        <th>
                            <label class="fw-bold">Contenuto dello sponsor</label>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Foto)
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Users.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titolo)
                            </td>
                            <td class="description-column">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Foto)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.SponsorId }, new { @class = "btn btn-login btn-sm text-white" })
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.SponsorId }, new { @class = "btn btn-back btn-sm text-white" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.SponsorId }, new { @class = "btn btn-danger btn-sm text-white" })
                            </td>

                        </tr>
                    }

                </table>
            </div>
            
            </div>
</div>
</div>