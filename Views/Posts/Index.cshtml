@model IEnumerable<Whisper.Models.Posts>
@{
    ViewBag.Title = "Home";
    var loggedInUserId = User.Identity.Name;
}

@if (Model.Any())
{
    <h2 class="color-wine">Benvenuto, @Model.First().Users.Username</h2> 
}


<p>
    @Html.ActionLink("Scrivi nuovo Bisbiglio", "Create", null, new { @class = "btn btn-login text-white" })
</p>

@foreach (var item in Model)
{
    <div class="post w-75 @*mx-auto*@ my-3 p-3 bg-white rounded shadow">
        <div class="d-flex justify-content-between align-items-start">
            <div class="d-flex flex-column">
                <span class="username icon-pro">@Html.DisplayFor(modelItem => item.Users.Username)</span>
                <span class="posted-at text-muted" style="font-size: 0.8em;">@(item.PostedAt.HasValue ? item.PostedAt.Value.ToString("dd/MM/yyyy HH:mm") : string.Empty)</span>
            </div>
            @if (item.UserId.ToString() == loggedInUserId)
            {
                <div class="post-actions">
                    <a href="@Url.Action("Edit", "Posts", new { id = item.PostId })" class="me-2"><i class="fa fa-pencil-alt icon-pro"></i></a>
                    <a href="@Url.Action("Delete", "Posts", new { id = item.PostId })"><i class="fa fa-trash icon-pro"></i></a>
                </div>
            }
        </div>
        <div class="post-content mt-2 fw-bold">
            @Html.DisplayFor(modelItem => item.Contents)
        </div>
    </div>
}
